<UserControl x:Class="MvvmLightTest.View.DebugMenuBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MvvmLightTest.View"
             mc:Ignorable="d" 
             Background="Azure"
             d:DesignHeight="100" d:DesignWidth="1024"
             DataContext="{Binding DebugMenuBar, Source={StaticResource Locator}}">
    <WrapPanel>
        <Button Width="100" Height="100" Command="{Binding AddRandProductToCart}">
            <TextBlock Text="Add Random Product To Cart" TextWrapping="Wrap" TextAlignment="Center"/>
        </Button>
        <Button Content="Swipe More" Width="100" Height="100"/>
        <Button Content="Swipe CC" Width="100" Height="100"/>
        
    </WrapPanel>
</UserControl>
