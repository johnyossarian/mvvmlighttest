<UserControl x:Class="MvvmLightTest.View.LoyaltyCardDirectorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MvvmLightTest.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600"
             Background="Azure"
             DataContext="{Binding LoyaltyCardDirector, Source={StaticResource Locator}}">
    
    <Grid>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" TextWrapping="Wrap" Text="To add a card to your account, please visit" VerticalAlignment="Top" Margin="0,45,0,10"/>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Center" Margin="0,65,0,0" Text="{Binding Url}" TextWrapping="Wrap"  VerticalAlignment="Top"/>
        <Image Source="{Binding UrlQrCode}" Height="100"/>
    </Grid>
</UserControl>
