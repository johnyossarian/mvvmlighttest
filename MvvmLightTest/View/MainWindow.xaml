<Window x:Class="MvvmLightTest.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MvvmLightTest.View"
        mc:Ignorable="d"
        Title="MainWindow" WindowStyle="None" WindowState="Maximized" d:DesignWidth ="1280" d:DesignHeight ="1024"
        DataContext="{Binding Main, Source={StaticResource Locator}}">
    <ContentControl Content="{Binding CurrentView}"/>
    <Window.InputBindings>
        <KeyBinding Key="F10" Command="{Binding SwitchViewCommand}" CommandParameter="{x:Type view:OperatorMenu}"/>
        <KeyBinding Key="Esc" Command="{Binding SwitchViewCommand}" CommandParameter="{x:Type view:MainMenu}"/>
    </Window.InputBindings>
</Window>
